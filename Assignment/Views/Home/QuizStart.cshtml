@model Assignment.Models.TblQuestion
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>QuizStart</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">


            <div class="container" style="margin:0 auto;margin-top:150px;">

                <div class="row">
                    <h1>@Html.DisplayFor(x => x.QText)</h1>

                </div>

                <div class="row">
                    <h3>@Html.RadioButtonFor(x => x.Opa, @Model.QuestionId) @Model.Opa</h3>
                </div>

                <div class="row">
                    <h3>@Html.RadioButtonFor(x => x.Opb, @Model.QuestionId) @Model.Opb</h3>
                </div>
                <div class="row">
                    <h3>@Html.RadioButtonFor(x => x.Opc, @Model.QuestionId) @Model.Opc</h3>
                </div>
                <div class="row">
                    <h3>@Html.RadioButtonFor(x => x.Opd, @Model.QuestionId) @Model.Opd</h3>
                </div>
                <div class="row" style="display:none">
                    @Html.TextBoxFor(x => x.Cop)
                </div>
                <div class="rown">
                    <input type="submit" value="submit" class="btn btn-success" />
                </div>

            </div>


        </div>


    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
